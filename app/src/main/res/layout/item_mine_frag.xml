<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/common_measure_12dp"
    android:paddingRight="@dimen/common_measure_12dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="@dimen/common_measure_12dp"
            android:paddingTop="@dimen/common_measure_12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:paddingLeft="@dimen/common_measure_8dp"
            android:text="分享记录"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14sp"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more"/>
    </LinearLayout>

</LinearLayout>