<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_course_1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/home_course_icon_1"
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_course_item_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_course_icon_1"
            android:orientation="horizontal"
            android:background="@color/black_translucence">

            <TextView
                android:id="@+id/home_course_zan_total_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/zan_white"
                android:drawablePadding="8px"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="12"
                android:textColor="@color/color_BBBAB5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_course_comment_total_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/include_comment_gray"
                android:drawablePadding="8px"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="12"
                android:textColor="@color/color_BBBAB5"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/home_course_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_course_icon_1"
            android:layout_marginTop="4dp"
            android:textSize="12dp"
            android:text="pdf课程"/>
    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"></View>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_course_2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/home_course_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_course_item_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_course_icon_2"
            android:orientation="horizontal"
            android:background="@color/black_translucence">

            <TextView
                android:id="@+id/home_course_zan_total_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/zan_white"
                android:drawablePadding="8px"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="12"
                android:textColor="@color/color_BBBAB5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_course_comment_total_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/include_comment_gray"
                android:drawablePadding="8px"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="12"
                android:textColor="@color/color_BBBAB5"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/home_course_name_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_course_icon_2"
            android:layout_marginTop="4dp"
            android:textSize="12dp"
            android:text="在谈判中赢得主动的步骤"/>
    </RelativeLayout>
</LinearLayout>