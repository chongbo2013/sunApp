<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/color_FFFFFF"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mine_download_tv"
        style="@style/style_mine_tv"
        android:drawableTop="@drawable/mine_download"
        android:text="@string/mine_download" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/line_mine" />

    <TextView
        android:id="@+id/mine_collect_tv"
        style="@style/style_mine_tv"
        android:drawableTop="@drawable/mine_collect"
        android:text="@string/mine_collect" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/line_mine" />

    <TextView
        android:id="@+id/mine_note_tv"
        style="@style/style_mine_tv"
        android:drawableTop="@drawable/mine_notes"
        android:text="@string/mine_note" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/line_mine" />

    <TextView
        android:id="@+id/mine_live_tv"
        style="@style/style_mine_tv"
        android:drawableTop="@drawable/mine_live"
        android:text="@string/mine_live_open" />

</LinearLayout>