<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="sunlearning.sunlearningdemo.examine.ExamineFragment"
    android:orientation="vertical">

    <include layout="@layout/fragment_examine_top_menu"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/examine_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/color_46bc62"
        app:tabTextColor="@color/color_333333"

        ></android.support.design.widget.TabLayout>

    <View style="@style/style_horizontal_line"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/examine_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>
