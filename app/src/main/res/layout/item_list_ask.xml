<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <sunlearning.sunlearningdemo.utils.widegt.CircleImageView
        android:id="@+id/ask_head_img"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/head_img" />

    <TextView
        android:id="@+id/ask_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="马洋阳"
        android:textColor="@color/color_46BC62"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/ask_head_img"/>

    <TextView
        android:id="@+id/ask_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-11-04 17:13"
        android:textColor="@color/color_999999"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ask_user_name"/>

    <TextView
        android:id="@+id/ask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优化配置，提高效率，降低成本"
        android:textSize="14dp"
       android:layout_marginTop="@dimen/common_measure_6dp"
        android:textColor="@color/color_323232"
        android:layout_alignLeft="@id/ask_user_name"
        android:layout_below="@id/ask_user_name"
        android:lines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/ask_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="悬赏"
        android:textSize="@dimen/common_measure_12dp"
        android:layout_marginTop="@dimen/common_measure_7dp"
        android:layout_below="@id/ask_head_img"
        android:layout_alignLeft="@id/ask_head_img"
        android:textColor="@color/color_BBBAB5"/>

    <TextView
        android:id="@+id/ask_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="@dimen/common_measure_12dp"
        android:textColor="@color/color_0079FF"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:drawableRight="@drawable/ask_gold"
        android:drawablePadding="@dimen/common_measure_10dp"
        android:layout_toRightOf="@id/ask_reward_name"
        android:layout_alignTop="@id/ask_reward_name"/>


    <TextView
        android:id="@+id/ask_answer_count_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回答数"
        android:textSize="@dimen/common_measure_12dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_BBBAB5"
        android:layout_alignTop="@+id/ask_reward" />

    <TextView
        android:id="@+id/ask_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="@dimen/common_measure_12dp"
        android:textColor="@color/color_0079FF"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_toRightOf="@id/ask_answer_count_name"
        android:layout_alignTop="@id/ask_answer_count_name"/>


    <TextView
        android:id="@+id/ask_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待解决"
        android:textSize="@dimen/common_measure_12dp"
        android:textColor="@color/color_FF0000"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ask_answer_count_name"/>
</RelativeLayout>